{
    "compilerOptions": {
        "module": "commonjs",
        "noImplicitAny": false,
        "removeComments": true,
        "noUnusedLocals": true,
        "preserveConstEnums": true,
        "allowJs": true,
        "sourceMap": true,
        "outDir": "dist",
        "target": "es5",
        "typeRoots" : ["./types"],
        "types" : ["node"]
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}